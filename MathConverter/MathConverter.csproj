<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net45</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <AssemblyName>MathConverter</AssemblyName>
    <RootNamespace>HexInnovation</RootNamespace>
    <Copyright>Copyright © 2015-$([System.DateTime]::Now.ToString(`yyyy`)) Hex Innovation</Copyright>
    <Product>MathConverter</Product>
    <Version>1.3.0</Version>
    <AssemblyVersion>1.3.0.0</AssemblyVersion>
    <FileVersion>1.3.0.0</FileVersion>
    <Company>Hex Innovation</Company>
    <Authors>Hex Innovation</Authors>
    <Description>A WPF Converter class that does it all.</Description>
    <PackageProjectUrl>https://github.com/hexinnovation/MathConverter</PackageProjectUrl>
    <PackageIcon>smalllogo.png</PackageIcon>
    <RepositoryUrl>https://github.com/hexinnovation/MathConverter</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags>WPF Converter Math Arbitrary Expressions ConverterParameter IValueConverter IMultiValueConverter</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('net4'))">
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\ReadmeAssets\smalllogo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>